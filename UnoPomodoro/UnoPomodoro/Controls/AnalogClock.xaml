<UserControl x:Class="UnoPomodoro.Controls.AnalogClock"
     x:Name="ClockRoot"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     mc:Ignorable="d">

  <Grid Width="{Binding ClockSize, ElementName=ClockRoot}"
    Height="{Binding ClockSize, ElementName=ClockRoot}"
    Background="Transparent">
    <Canvas x:Name="ClockCanvas"
    Width="{Binding ClockSize, ElementName=ClockRoot}"
    Height="{Binding ClockSize, ElementName=ClockRoot}">
  <!-- Clock Circle Background -->
  <Ellipse x:Name="ClockFace"
       Width="{Binding ClockSize, ElementName=ClockRoot}"
       Height="{Binding ClockSize, ElementName=ClockRoot}"
       Stroke="{StaticResource OutlineColor}"
       StrokeThickness="3"
       Fill="Transparent" />

  <!-- Hour Markers Layer -->
  <Canvas x:Name="MarkerLayer" />

  <!-- Minute Hand (longer, thinner) -->
  <Line x:Name="MinuteHand"
    X1="0" Y1="0" X2="0" Y2="0"
    Stroke="{StaticResource PrimaryColor}"
    StrokeThickness="5" />

  <!-- Hour Hand (shorter, thicker) -->
  <Line x:Name="HourHand"
    X1="0" Y1="0" X2="0" Y2="0"
    Stroke="{StaticResource SecondaryColor}"
    StrokeThickness="7" />

  <!-- Second Hand (thin sweep) -->
  <Line x:Name="SecondHand"
    X1="0" Y1="0" X2="0" Y2="0"
    Stroke="{StaticResource OnSurfaceColor}"
    StrokeThickness="2" />

  <!-- Center Dot -->
  <Ellipse x:Name="CenterDot"
       Width="14" Height="14"
       Fill="{StaticResource PrimaryColor}" />
    </Canvas>
  </Grid>
</UserControl>
