<UserControl x:Class="UnoPomodoro.Controls.AnalogClock"
     x:Name="ClockRoot"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     mc:Ignorable="d">

  <Grid Width="{Binding ClockSize, ElementName=ClockRoot}"
    Height="{Binding ClockSize, ElementName=ClockRoot}"
    Background="Transparent">
    <Ellipse x:Name="ClockFace"
     Width="{Binding ClockSize, ElementName=ClockRoot}"
     Height="{Binding ClockSize, ElementName=ClockRoot}"
     Stroke="{StaticResource OutlineColor}"
     StrokeThickness="3"
     Fill="Transparent" />

        <Path x:Name="ProgressFill"
          Fill="{Binding ProgressBrush, ElementName=ClockRoot}"
          Stretch="None"
          HorizontalAlignment="Left"
          VerticalAlignment="Top" />

    <Line x:Name="SweepHand"
      Stroke="{Binding ProgressBrush, ElementName=ClockRoot}"
      StrokeThickness="6"
      StrokeStartLineCap="Round"
          StrokeEndLineCap="Round" />

    <Ellipse x:Name="CenterDot"
     Width="16" Height="16"
         Fill="{Binding ProgressBrush, ElementName=ClockRoot}"
         HorizontalAlignment="Center"
         VerticalAlignment="Center" />
  </Grid>
</UserControl>
