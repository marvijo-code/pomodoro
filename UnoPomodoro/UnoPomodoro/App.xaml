<Application x:Class="UnoPomodoro.App"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       RequestedTheme="Dark">

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- Load WinUI resources -->
        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
        <!-- Uno Material styles for WinUI controls -->
        <MaterialTheme xmlns="using:Uno.Material" />
        <!-- Uno Toolkit resources and Material variants -->
        <ToolkitResources xmlns="using:Uno.Toolkit.UI" />
        <ToolkitMaterialResources xmlns="using:Uno.Toolkit.UI.Material" />
      </ResourceDictionary.MergedDictionaries>

      <!-- Professional Dark Theme Colors (Material Design 3) -->
      <SolidColorBrush x:Key="PrimaryColor" Color="#FF6750A4" />
      <SolidColorBrush x:Key="OnPrimaryColor" Color="#FFFFFFFF" />
      <SolidColorBrush x:Key="PrimaryContainerColor" Color="#FFEADDFF" />
      <SolidColorBrush x:Key="OnPrimaryContainerColor" Color="#FF21005E" />

      <SolidColorBrush x:Key="SecondaryColor" Color="#FF625B71" />
      <SolidColorBrush x:Key="OnSecondaryColor" Color="#FFFFFBFE" />
      <SolidColorBrush x:Key="SecondaryContainerColor" Color="#FFE8DEF8" />
      <SolidColorBrush x:Key="OnSecondaryContainerColor" Color="#FF1D192B" />

      <SolidColorBrush x:Key="TertiaryColor" Color="#FF7D5260" />
      <SolidColorBrush x:Key="OnTertiaryColor" Color="#FFFFFBFE" />
      <SolidColorBrush x:Key="TertiaryContainerColor" Color="#FFFFD8E4" />
      <SolidColorBrush x:Key="OnTertiaryContainerColor" Color="#FF31111D" />

      <SolidColorBrush x:Key="BackgroundColor" Color="#FF1C1B1F" />
      <SolidColorBrush x:Key="OnBackgroundColor" Color="#FFE6E1E5" />
      <SolidColorBrush x:Key="SurfaceColor" Color="#FF1C1B1F" />
      <SolidColorBrush x:Key="OnSurfaceColor" Color="#FFE6E1E5" />
      <SolidColorBrush x:Key="SurfaceVariantColor" Color="#FF49454E" />
      <SolidColorBrush x:Key="OnSurfaceVariantColor" Color="#FFCAC4D0" />

      <SolidColorBrush x:Key="ErrorColor" Color="#FFBA1A1A" />
      <SolidColorBrush x:Key="OnErrorColor" Color="#FFFFFFFF" />
      <SolidColorBrush x:Key="ErrorContainerColor" Color="#FF93000A" />
      <SolidColorBrush x:Key="OnErrorContainerColor" Color="#FFFFDAD6" />

      <SolidColorBrush x:Key="OutlineColor" Color="#FF938F99" />
      <SolidColorBrush x:Key="OutlineVariantColor" Color="#FF49454E" />

      <!-- Timer Colors -->
      <SolidColorBrush x:Key="PomodoroColor" Color="#FFEF5350" />
      <SolidColorBrush x:Key="ShortBreakColor" Color="#FF66BB6A" />
      <SolidColorBrush x:Key="LongBreakColor" Color="#FF42A5F5" />

      <!-- Typography -->
      <FontFamily x:Key="DefaultFont">Segoe UI Variable</FontFamily>

      <!-- Animation Durations -->
      <x:Double x:Key="FastAnimationDuration">150</x:Double>
      <x:Double x:Key="MediumAnimationDuration">300</x:Double>
      <x:Double x:Key="SlowAnimationDuration">500</x:Double>

      <!-- Component Styles -->
      <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryColor}" />
        <Setter Property="Foreground" Value="{StaticResource OnPrimaryColor}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="BorderThickness" Value="0" />
      </Style>

      <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource SecondaryContainerColor}" />
        <Setter Property="Foreground" Value="{StaticResource OnSecondaryContainerColor}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="BorderThickness" Value="0" />
      </Style>

      <Style x:Key="TimerDisplayStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="72" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="FontFamily" Value="{StaticResource DefaultFont}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Foreground" Value="{StaticResource OnSurfaceColor}" />
        <Setter Property="Margin" Value="0,20,0,20" />
      </Style>

      <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceColor}" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="0,8,0,8" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{StaticResource OutlineVariantColor}" />
      </Style>

    </ResourceDictionary>
  </Application.Resources>

</Application>
